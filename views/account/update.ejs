<%- include('../partials/header.ejs') %>

<main>
  <h1 class="acctTitle"><%= title %></h1>

  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <%  }) %>
    </ul>
  <% } %>

  <h2>Update Account Information</h2>
  <div class="form-frame">
    <form class="form" action="/account/update/<%= accountData.account_id %>" method="POST">
      <input type="hidden" name="update_type" value="info">
      <label for="account_firstname">First Name:</label>
      <input 
        type="text" 
        name="account_firstname" 
        id="account_firstname" 
        required 
        value="<%= accountData.account_firstname %>"
      >
      <label for="account_lastname">Last Name:</label>
      <input 
        type="text" 
        name="account_lastname" 
        id="account_lastname" 
        pattern="^[a-zA-Z \-\']{2,}" 
        required 
        value="<%= accountData.account_lastname %>"
      >
      <label for="account_email">Email:</label>
      <input 
        type="email" 
        name="account_email" 
        id="account_email" 
        required 
        value="<%= accountData.account_email %>"
      >
      <button type="submit">Update</button>
    </form>
  </div>

  <h2>Update Account Password</h2>
  
  <div class="form-frame">
    <form class="form" action="/account/update/<%= accountData.account_id %>" method="POST">
      <p>*Note: Your original password will be changed.</p>
      <input type="hidden" name="update_type" value="password">

      
      <label for="new_password">New Password:</label>
      <input 
        type="password" 
        name="new_password" 
        id="new_password" 
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" 
        title="Passwords must have 12 characters, 1 number, 1 special character, 1 uppercase and 1 lowercase letter." 
        required>

      <span id="pwBtn" tabindex="0">Show Password</span>
      <p>Password must have 12 characters, 1 number, 1 special character, 1 uppercase and 1 lowercase letter.</p>

      <button type="submit">Change Password</button>
    </form>
  </div>
</main>